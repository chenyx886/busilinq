<?xml version="1.0" encoding="UTF-8"?><!--方形按钮渐变从左到右-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 -->
    <solid android:color="#ff7342" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <!--<corners android:radius="15dip" />-->
    <!--设置渐变-->
    <gradient
        android:angle="90"
        android:endColor="#ff7342"
        android:startColor="#e44010" />
</shape>