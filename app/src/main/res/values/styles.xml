<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PhotoPickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextStyle</item>
    </style>


    <!-- 设置ActionBar菜单字体 -->
    <style name="ActionMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    
    <!-- 分割线 0.5dp -->
    <style name="line_diliver">
        <item name="android:background">#e6e6e6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dip</item>
    </style>

    <!-- 垂直分割线 -->
    <style name="divider_vertical">
        <item name="android:layout_width">0.2dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#e6e6e6</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 对话框样式 -->
    <style name="AppShowDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <!--主页底部Tab RadioButton style-->
    <style name="home_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">@dimen/text_size12</item>
        <item name="android:textColor">@color/home_rb_color_selector</item>
        <item name="android:layout_gravity">center_vertical|bottom</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="RecycleViewCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>
    <style name="style_14_ffffff">
        <item name="android:textSize">@dimen/text_size12</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--人气 时间 价格-->
    <style name="screen_textView_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/page_title_color</item>
        <item name="android:textSize">@dimen/text_size14</item>
    </style>


    <style name="title_textView_item_style">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/page_title_color</item>
        <item name="android:textSize">@dimen/text_size14</item>
    </style>

    <style name="HeaderImageViewwStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="MainTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size14</item>
    </style>


    <style name="SecondTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size12</item>
    </style>

    <style name="TimeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">@dimen/text_size12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <!-- 个人信息 TextViewStyle -->
    <style name="DetailsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/page_text_color</item>
        <item name="android:textSize">@dimen/text_size16</item>
    </style>


    <!-- 是否设置成默认 -->
    <style name="MyCheckBox_Default" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/register_check</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!-- 支付方式 item文字 我的、更多 -->
    <style name="zfTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size14</item>
    </style>

    <!-- 用户资料LinearLayout -->
    <style name="userLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 用户资料TextView -->
    <style name="userTextViewStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/page_title_color</item>
        <item name="android:textSize">@dimen/text_size14</item>
    </style>

    <!-- 用户资料EditText -->
    <style name="userEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/page_title_color</item>
        <item name="android:textColorHint">@color/HintColor</item>
        <item name="android:textSize">@dimen/text_size14</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">20</item>
    </style>

    <!-- 通用底部button -->
    <style name="buttonStyle">
        <item name="android:layout_width">285.00dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@mipmap/ic_btn_login_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size18</item>
    </style>


    <!--收货地址复选框样式-->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <!-- 收货地址TextView -->
    <style name="addressTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/page_title_color</item>
        <item name="android:textSize">@dimen/text_size13</item>
    </style>
    <!--通用选择框-->
    <style name="common_dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!-- listView -->
    <style name="listView_common">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/color_e6e6e6</item>
        <item name="android:dividerHeight">@dimen/space_1</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>
    <style name="list_view_common_style">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/color_f2f2f2</item>
        <item name="android:dividerHeight">@dimen/space_2</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:overScrollMode">never</item>
    </style>
    <!--progress dialog-->
    <style name="dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@color/color_90080c15</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--我的订单-->
    <style name="myxsm_orders_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_5</item>
        <item name="android:paddingLeft">@dimen/space_20</item>
        <item name="android:textSize">@dimen/text_size12</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>
</resources>
