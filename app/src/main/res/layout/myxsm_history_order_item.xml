<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/xsm_history_orders_date_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60"
        android:background="@color/color_eaeaea"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_30"
        android:text="2017-05"
        android:textColor="@color/color_aaaaaa"
        android:textSize="@dimen/text_size16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_20"
        android:paddingLeft="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        android:paddingTop="@dimen/space_20">

        <LinearLayout
            android:layout_width="@dimen/space_112"
            android:layout_height="@dimen/space_112"
            android:background="@drawable/linearlayout_histor_order_item_009999_frame"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/xsm_history_orders_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size24" />

            <TextView
                android:id="@+id/xsm_history_orders_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:12"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/xsm_history_orders_custcode_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hk5252200254455"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size16" />

            <TextView
                android:id="@+id/xsm_history_orders_total_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:text="共0条"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_20"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/xsm_history_orders_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未付款"
                android:textColor="@color/color_f20c0c"
                android:textSize="@dimen/text_size16" />

            <TextView
                android:id="@+id/xsm_history_orders_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:text="￥0.00"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>