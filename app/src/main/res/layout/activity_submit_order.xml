<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/gps_address"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="收货地址"
            android:textColor="@color/colorTabChecked" />
        <!--无地址显示的布局-->
        <LinearLayout
            android:id="@+id/line_address_empty_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/address_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_add_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/add_address"
                android:drawablePadding="5dp"
                android:text="新增地址"
                android:textColor="@color/page_title_color"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>
        <!--有地址显示的布局-->
        <LinearLayout
            android:id="@+id/line_address_full_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/address_bg"
            android:drawableRight="@mipmap/arrow_right"
            android:visibility="gone"
            android:gravity="center|left"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人："
                android:textColor="@color/page_title_color"
                android:textSize="@dimen/text_size14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话："
                android:textColor="@color/page_title_color"
                android:textSize="@dimen/text_size14" />

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/arrow_right"
                android:text="收货单位："
                android:textColor="@color/page_title_color"
                android:textSize="@dimen/text_size14" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址："
                android:textColor="@color/page_title_color"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>

        <!--商品清单-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_default_bg"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品清单"
                android:textColor="@color/page_title_color"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共两种"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorTabNormal"
                android:drawableRight="@mipmap/arrow_down"
                android:drawablePadding="5dp"
                android:textSize="15sp" />
        </RelativeLayout>
        <!--配送方式-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_default_bg"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送方式"
                android:textColor="@color/page_title_color"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送货上门"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorTabNormal"
                android:drawableRight="@mipmap/arrow_right"
                android:drawablePadding="5dp"
                android:textSize="15sp" />
        </RelativeLayout>
        <!--支付方式-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_default_bg"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textColor="@color/page_title_color"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金（先付）"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorTabNormal"
                android:drawableRight="@mipmap/arrow_right"
                android:drawablePadding="5dp"
                android:textSize="15sp" />
        </RelativeLayout>
        <!--备注-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@color/button_default_bg"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="备注"
                android:textColor="@color/page_title_color"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:gravity="top|left"
                android:cursorVisible="false"
                android:inputType="text|textMultiLine"
                android:background="@null"
                android:textColor="@color/colorTabNormal"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <!--底部提交订单-->
    <RelativeLayout
        android:id="@+id/rela_cart_full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/button_default_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="共"
                android:textColor="@color/page_title_color"
                android:textSize="@dimen/text_size14" />

            <TextView
                android:id="@+id/tv_total_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/colorTabChecked"
                android:textSize="@dimen/text_size14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="种"
                android:textColor="@color/page_title_color"
                android:textSize="@dimen/text_size14" />

            <TextView
                android:id="@+id/check_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:drawablePadding="5dp"
                android:paddingLeft="15dp"
                android:text="合计："
                android:textColor="@color/page_title_color"
                android:textSize="@dimen/text_size14" />

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0"
                android:textColor="@color/colorTabChecked"
                android:textSize="@dimen/text_size14" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_settlement"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_shap_square"
            android:text="@string/submit_order"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size18" />
    </RelativeLayout>

</LinearLayout>