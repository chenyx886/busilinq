<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_igv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_tip_fail"
        android:visibility="gone"
        tools:visibility="visible" />

    <net.qiujuer.genius.ui.widget.Loading
        android:id="@+id/error_anim_progress"
        android:layout_width="@dimen/space_26"
        android:layout_height="@dimen/space_26"
        app:gForegroundColor="?attr/colorPrimary" />

    <TextView
        android:id="@+id/error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center"
        android:lines="2"
        android:text="@string/error_view_loading"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size14" />

</LinearLayout>