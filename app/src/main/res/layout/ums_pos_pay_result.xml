<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eaeaea"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.omyni.mdmanager.widget.HeadBar
        android:id="@+id/ums_pos_pay_result_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/result_igv"
        android:layout_width="@dimen/space_165"
        android:layout_height="@dimen/space_165"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_150"
        android:src="@mipmap/ic_pay_vague" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_40"
        android:text="支付失败"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size20" />

    <TextView
        android:id="@+id/result_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_20"
        android:text="提示：未支付完成"
        android:textColor="@color/color_f25757"
        android:textSize="@dimen/text_size14" />

    <Button
        android:id="@+id/result_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_90"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/space_20"
        android:layout_marginTop="@dimen/space_40"
        android:background="@drawable/linearlayout_009999_frame"
        android:text="重新支付"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size18" />
</LinearLayout>