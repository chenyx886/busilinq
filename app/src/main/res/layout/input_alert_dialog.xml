<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/space_520"
    android:layout_height="@dimen/space_280"
    android:background="@drawable/common_dialog_frame"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_10">

    <TextView
        android:id="@+id/input_alert_dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"
        android:background="@drawable/common_alert_dialog_tv_frame"
        android:gravity="center"
        android:text="删除帐号"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size20" />


    <EditText
        android:id="@+id/input_alert_dialog_qty_edt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_90"
        android:layout_margin="@dimen/space_10"
        android:background="@drawable/common_dialog_frame"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size16" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fengexian_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_cccccc" />

        <LinearLayout
            android:id="@+id/common_alert_dialog_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_90"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input_alert_dialog_cancle_tv"
                android:layout_width="@dimen/space_260"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_009999"
                android:textSize="@dimen/text_size16" />

            <TextView
                android:layout_width="@dimen/space_1"
                android:layout_height="match_parent"
                android:background="@color/color_cccccc" />

            <TextView
                android:id="@+id/input_alert_dialog_sure_tv"
                android:layout_width="@dimen/space_259"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/color_009999"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>