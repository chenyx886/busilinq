<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_eaeaea"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <com.busilinq.xsm.widget.HeadBar
        android:id="@+id/xsm_accouts_headbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_cccccc"/>

    <LinearLayout
        android:id="@+id/xsm_no_accounts_lly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/space_266"
            android:layout_height="@dimen/space_266"
            android:src="@mipmap/ic_no_order"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_34"
            android:text="没有帐号"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/text_size16"/>

    </LinearLayout>


    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/xsm_accouts_swpLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@null"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_cccccc"/>

    <TextView
        android:id="@+id/xsm_accounts_add_account_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100"
        android:background="@color/color_ffffff"
        android:gravity="center"
        android:text="+ 添加新商盟帐号"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size18"/>
</LinearLayout>