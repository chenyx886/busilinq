<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f2f2f2"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <com.busilinq.xsm.widget.SearchView
        android:id="@+id/myxsm_searchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/myxsm_searchview_hist_search_lv"
        style="@style/listView_common"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5"
        android:divider="@color/color_e6e6e6"/>

    <ListView
        android:id="@+id/myxsm_searchview_results_lv"
        style="@style/listView_common"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5"
        android:divider="@color/color_e6e6e6"
        android:visibility="gone"/>
</LinearLayout>