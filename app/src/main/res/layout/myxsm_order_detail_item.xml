<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/space_20"
    android:paddingLeft="@dimen/space_30"
    android:paddingTop="@dimen/space_20">

    <RelativeLayout
        android:id="@+id/smk_order_detail_layout"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/myxsm_order_detail_item_igv"
            android:layout_width="@dimen/space_150"
            android:layout_height="@dimen/space_150"
            android:background="@drawable/ordering_cgtpic_iv_framge"
            android:contentDescription="@null"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/ordering_cgtinfo_special_pic_igv"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_40"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@mipmap/cgt_special"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/space_0"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myxsm_order_detail_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="烟品名称"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size16" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myxsm_order_detail_item_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="单价：0"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/text_size12" />

            <TextView
                android:id="@+id/myxsm_order_detail_item_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:maxLines="1"
                android:text="数量：0"
                android:textColor="@color/color_aaaaaa"
                android:textSize="@dimen/text_size12" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/myxsm_order_detail_item_total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/space_26"
        android:paddingRight="@dimen/space_26"
        android:text="￥0.00"
        android:textColor="@color/color_aaaaaa"
        android:textSize="@dimen/text_size22" />

</LinearLayout>