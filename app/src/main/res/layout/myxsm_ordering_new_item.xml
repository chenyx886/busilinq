<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myxsm_ordering_item_bg_lly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/space_25"
    android:paddingLeft="@dimen/space_30"
    android:paddingTop="@dimen/space_25">

    <RelativeLayout
        android:id="@+id/smk_order_detail_layout"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/myxsm_ordering_item_igv"
            android:layout_width="@dimen/space_150"
            android:layout_height="@dimen/space_150"
            android:background="@color/color_cccccc"
            android:contentDescription="@null"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/ordering_cgtinfo_special_pic_igv"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_40"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@mipmap/cgt_special"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/space_0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myxsm_ordering_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="长城浓香（9999）支"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size18" />

        <TextView
            android:id="@+id/myxsm_ordering_item_limit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_4"
            android:layout_marginTop="@dimen/space_4"
            android:maxLines="1"
            android:text="促销  限量: 9999"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/text_size12" />

        <TextView
            android:id="@+id/myxsm_ordering_item_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="￥8988.12/条"
            android:textColor="@color/color_0d9e5c"
            android:textSize="@dimen/text_size18" />
    </LinearLayout>

    <ImageView
        android:id="@+id/myxsm_ordering_item_reduce_igv"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40"
        android:src="@mipmap/ic_xsm_subtract" />


    <TextView
        android:id="@+id/myxsm_ordering_item_qty_tv"
        android:layout_width="@dimen/space_100"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/space_26"
        android:paddingRight="@dimen/space_26"
        android:text="200"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size14"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/myxsm_ordering_item_increase_igv"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40"
        android:layout_marginRight="@dimen/space_20"
        android:src="@mipmap/ic_xsm_add" />
</LinearLayout>