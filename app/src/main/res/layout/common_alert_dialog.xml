<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/space_520"
                android:layout_height="@dimen/space_220"
                android:background="@drawable/common_dialog_frame"
                android:paddingTop="@dimen/space_49">

    <TextView
        android:id="@+id/common_alert_dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_alert_dialog_tv_frame"
        android:gravity="center"
        android:text="删除帐号"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size20"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/common_alert_dialog_msg_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_alert_dialog_title_tv"
        android:layout_marginBottom="@dimen/space_45"
        android:gravity="center"
        android:maxLines="2"
        android:text="确认删除？"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size16"/>

    <EditText
        android:id="@+id/common_alert_dialog_qty_edt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_56"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/space_10"
        android:background="@drawable/common_dialog_frame"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size16"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/common_alert_dialog_content_edt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_56"
        android:layout_below="@+id/common_alert_dialog_qty_edt"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/space_10"
        android:background="@drawable/common_dialog_frame"
        android:gravity="center"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size16"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/common_alert_dialog_msg_tv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fengexian_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/color_cccccc"/>

        <LinearLayout
            android:id="@+id/common_alert_dialog_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/common_alert_dialog_cancle_tv"
                android:layout_width="@dimen/space_260"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_009999"
                android:textSize="@dimen/text_size14"/>

            <TextView
                android:layout_width="@dimen/space_1"
                android:layout_height="match_parent"
                android:background="@color/color_cccccc"/>

            <TextView
                android:id="@+id/common_alert_dialog_sure_tv"
                android:layout_width="@dimen/space_259"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/color_009999"
                android:textSize="@dimen/text_size14"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>