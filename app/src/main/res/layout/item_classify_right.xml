        android:minHeight="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="分类"
        android:textColor="@color/page_title_color"
        android:textSize="@dimen/text_size14" />


    <View style="@style/line_diliver" />

